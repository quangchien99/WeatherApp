<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_blue"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img_weather"
        android:layout_width="@dimen/width_100dp"
        android:layout_height="@dimen/height_100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_50dp"
        android:src="@drawable/ic_sunny" />

    <TextView
        android:id="@+id/tv_weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:text="Mostly cloudy"
        android:textColor="@color/color_light_orange"
        android:textSize="@dimen/text_size_30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:text="Ha Noi"
        android:textColor="@color/color_light_orange"
        android:textSize="@dimen/text_size_30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_15dp"
        android:text="16:00 - 20/11/2020"
        android:textColor="@color/color_light_orange"
        android:textSize="@dimen/text_size_30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_15dp"
        android:text="30"
        android:textColor="@color/color_light_orange"
        android:textSize="@dimen/text_size_60sp"
        android:textStyle="bold" />
</LinearLayout>